<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	      version="3.0">


	<!-- La pagina de bienvenida. Tambien se puede poner la ruta de un controlador -->
	<welcome-file-list>
    	<welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>


	<!--
		Paginas de errores para los controladores
		En los jsp se le tiene que indicar con una directiva @page cual es la pagina de error a la que tiene que ir.
	 -->

    <error-page>
    	<error-code>404</error-code>
    	<location>/pagina404.jsp</location>
    </error-page>


    <error-page>
    	<error-code>500</error-code>
    	<location>/error.jsp</location>
    </error-page>
    
    
</web-app>
